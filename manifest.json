{
  "manifest_version": 2,
  "name": "My Chrome App",
  "description": "Hello Chrome World",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "Fast Exchange"
  },
  "background": {
    "scripts": ["module/jquery.min.js", "js/common.js", "js/weather.js", "js/background.js"]
  },
  "permissions": [
    "activeTab", "storage", "alarms", "notifications",
    "http://www.kma.go.kr/*"
  ],
  "content_scripts": [
    {
      "matches":["http://*/*", "https://*/*"],
      "js": ["module/jquery.min.js"]
    }
  ]
}